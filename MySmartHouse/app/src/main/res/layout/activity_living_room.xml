<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.LivingRoomActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Living Room"
            android:gravity="center"
            android:textSize="50dp"
            android:layout_weight="0.1">
        </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Temperature Sensor"
                android:textSize="30dp"
                android:paddingLeft="30dp">
            </TextView>

            <SeekBar
                android:id="@+id/LvSkTempSensor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:max="30"
                android:min="15"
                android:progress="15">
            </SeekBar>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Movement Sensor"
            android:textSize="30dp"
            android:paddingLeft="30dp">
        </TextView>

        <SeekBar
            android:id="@+id/LvSkMovSensor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:max="40"
            android:min="0"
            android:progress="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3">

        <TextView
            android:id="@+id/LvTvAmbiente"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Ambiente Sala de Estar"
            android:gravity="center"
            android:textSize="30dp"
            android:textColor="@android:color/white"
            android:background="@android:color/black">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_marginTop="100dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Light"
                android:textSize="30dp"
                android:paddingLeft="50dp"
                android:layout_marginRight="60dp"/>

            <Button
                android:id="@+id/LvButtonLight"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:textSize="50dp"
                android:text="OFF" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ar"
                android:textSize="30dp"
                android:paddingLeft="50dp"
                android:layout_marginRight="60dp"/>

            <Button
                android:id="@+id/LvButtonAr"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:textSize="50dp"
                android:text="OFF" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>